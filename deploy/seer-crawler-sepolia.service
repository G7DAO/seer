[Unit]
Description=Seer crawler service for sepolia blockchain
After=network.target
StartLimitIntervalSec=300
StartLimitBurst=3

[Service]
WorkingDirectory=/home/ubuntu/seer
EnvironmentFile=/home/ubuntu/seer-secrets/app.env
Restart=on-failure
RestartSec=15s
ExecStart=/home/ubuntu/seer/seer crawler --chain sepolia --confirmations 1 --threads 2 --rpc-url $MOONSTREAM_NODE_SEPOLIA_A_EXTERNAL_URI
SyslogIdentifier=seer-crawler-sepolia

[Install]
WantedBy=multi-user.target
