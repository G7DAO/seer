[Unit]
Description=Seer synchronizer service for Ronin blockchain
After=network.target
StartLimitIntervalSec=300
StartLimitBurst=3

[Service]
WorkingDirectory=/home/ubuntu/seer
EnvironmentFile=/home/ubuntu/seer-secrets/app.env
Restart=on-failure
RestartSec=15s
ExecStart=/home/ubuntu/seer/seer synchronizer --chain ronin --rpc-url $MOONSTREAM_NODE_RONIN_A_EXTERNAL_URI
SyslogIdentifier=seer-synchronizer-ronin

[Install]
WantedBy=multi-user.target
