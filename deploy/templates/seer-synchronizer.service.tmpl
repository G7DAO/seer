{{`[Unit]`}}
Description=Seer crawler service for {{ .BlockchainName }} blockchain
After=network.target
StartLimitIntervalSec=300
StartLimitBurst=3

{{`[Service]`}}
WorkingDirectory=/home/ubuntu/seer
EnvironmentFile=/home/ubuntu/seer-secrets/app.env
Restart=on-failure
RestartSec=15s
ExecStart=/home/ubuntu/seer/seer crawler --chain {{ .BlockchainNameLower }} --confirmations {{ .Confirmations }} --threads {{ .Threads }}
SyslogIdentifier=seer-crawler-{{ .BlockchainNameLower }}

{{`[Install]`}}
WantedBy=multi-user.target
