{{`[Unit]`}}
Description=Seer historical synchronizer service for {{ .BlockchainName | replaceUnderscoreWithSpace }} blockchain
After=network.target
StartLimitIntervalSec=300
StartLimitBurst=3

{{`[Service]`}}
WorkingDirectory=/home/ubuntu/seer
EnvironmentFile=/home/ubuntu/seer-secrets/app.env
Restart=on-failure
RestartSec=15s
ExecStart=/home/ubuntu/seer/seer historical-sync --auto --chain {{ .BlockchainNameLower}}
SyslogIdentifier=seer-historical-synchronizer-{{ .ChainDashName }}

{{`[Install]`}}
WantedBy=multi-user.target
